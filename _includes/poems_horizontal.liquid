<div class="col mb-4">
  <a href="{% if poem.redirect %}{{ poem.redirect }}{% else %}{{ poem.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if poem.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=poem.img sizes="(min-width: 768px) 156px, 50vw" alt="poem thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if poem.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ poem.title }}</h3>
            <p class="card-text">{{ poem.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if poem.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ poem.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if poem.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ poem.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
